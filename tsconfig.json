{
    "include": [
        "src/sdk/*.ts", 
        "src/sdk/map*",
        "src/sdk/object*",
        "src/server/object_services/*",
        "src/tools/mapper_speed.js",
    ],
    "exclude": [
        
    ],
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        // Compile and check also javascript files
        "allowJs": true,
        "checkJs": true,
        // Allows to require json files
        "resolveJsonModule": true,
        
        // noResolve does not follow require/import 
        // so only included files will be compiled/checked
        // we use this but only from our npm scripts so vscode will resolve other files
        // "noResolve": true,
        
        // noEmit means we are not really saving the output
        // we only run to do compile time checks
        "noEmit": true,
    }
}
